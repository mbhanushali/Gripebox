%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :autocomplete => "off", :class => "sign-form"}) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    = f.email_field :email, :class => "tips", :default => ""
  %p
    = f.label :username
    = f.text_field :username, :class => "tips", :default => ""
  %p  
    = f.label :password 
    %span.letters (6 letters or more)
    = f.password_field :password, :class => "tips", :default => ""
  .clear
  %p
    = f.submit "Sign in", :class=>"btn small red", :default => ""
  %p 